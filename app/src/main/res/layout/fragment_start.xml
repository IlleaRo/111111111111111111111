<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment"
    android:orientation="vertical"
    android:id="@+id/startFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textOnNewScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="@string/welcome_to_the_cow_city_samurai"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/polish_dancing_cow_dancing"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        app:layout_constraintTop_toBottomOf="@+id/textOnNewScreen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        android:contentDescription="TODO">

    </ImageView>
    <Button
        android:id="@+id/contButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продолжить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.501" />


</androidx.constraintlayout.widget.ConstraintLayout>